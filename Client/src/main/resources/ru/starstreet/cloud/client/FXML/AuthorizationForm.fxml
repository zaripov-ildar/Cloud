<AnchorPane maxHeight="300.0" maxWidth="240.0" minHeight="240.0" minWidth="250.0" prefHeight="240.0" prefWidth="250.0"
            stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.starstreet.cloud.client.AuthorizationController">
   <Label layoutY="10.0" text="Login" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"/>
   <TextField fx:id="loginField" layoutY="40.0" text="Picard" AnchorPane.leftAnchor="25.0"
              AnchorPane.rightAnchor="25.0"/>

   <Label layoutY="80.0" text="Password" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"/>
   <PasswordField fx:id="passwordField" layoutY="110.0" text="123" AnchorPane.leftAnchor="25.0"
                  AnchorPane.rightAnchor="25.0"/>

   <Label fx:id="errorLabel" layoutY="150.0" text=" " textFill="RED" visible="false" AnchorPane.leftAnchor="25.0"
          AnchorPane.rightAnchor="25.0"/>

   <Button fx:id="authBtn" layoutY="180.0" mnemonicParsing="false" onAction="#authorize" text="Sign in"
           AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="75.0"/>
</AnchorPane>
